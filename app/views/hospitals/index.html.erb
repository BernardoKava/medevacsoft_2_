<% provide(:title, "Hospitals") %>
<p id="notice"><%= notice %></p>

<h1>Hospitals</h1>

<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Country</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Info</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td><%= hospital.name %></td>
          <td><%= hospital.address %></td>
          <td><%= hospital.country %></td>
          <td><%= hospital.phone %></td>
          <td><%= hospital.email %></td>
          <td><%= hospital.info %></td>
          <td><%= link_to 'View', hospital, class: "btn btn-primary" %></td>

          <% if current_user.admin == true %>
            <td><%= link_to 'Edit', edit_hospital_path(hospital), class:"btn btn-info" %></td>
            <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<hr />
<% if current_user.admin == true %>
  <%= link_to 'New Hospital', new_hospital_path, class: "btn btn-primary"%>
<% end %>
<%= link_to 'Dashboard', dashboard_index_path, class: "btn btn-danger"%>