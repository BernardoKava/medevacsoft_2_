<% provide(:title, "RHospitals") %>
<p id="notice"><%= notice %></p>

<h1>Rhospitals</h1>
<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Country</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Info</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rhospitals.each do |rhospital| %>
        <tr>
          <td><%= rhospital.name %></td>
          <td><%= rhospital.address %></td>
          <td><%= rhospital.country %></td>
          <td><%= rhospital.phone %></td>
          <td><%= rhospital.email %></td>
          <td><%= rhospital.info %></td>
          <td><%= link_to 'View', rhospital %></td>
          <td><%= link_to 'Edit', edit_rhospital_path(rhospital) %></td>
          <td><%= link_to 'Delete', rhospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<hr />
<%= link_to 'New Rhospital', new_rhospital_path %>
